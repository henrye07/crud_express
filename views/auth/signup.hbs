        <h1>REGISTRO</h1>

        {{#if errors}}
            {{#each errors}}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <strong>{{ msg }}</strong> 
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {{/each}}
        {{/if}}

        <form action="/signup" method="POST" >
                    <div class="form-group text-center my-4">
                        <label for="email" class="fs-4">Email</label>
                        <input type="email" class="form-control" name="email" id="email" value="{{ email }}" autofocus>
                    </div>
                    <div class="form-group text-center my-4">
                        <label for="password" class="fs-4">Password</label>
                        <input type="password" class="form-control" name="password" id="password">
                    </div>
                    <div class="form-group text-center my-4">
                        <label for="password_confirmation" class="fs-4">Confirm Password</label>
                        <input type="password" class="form-control" name="password_confirmation" id="password_confirmation">
                    </div>
                    <div class="mt-3 w-100">
                        <input type="submit" class="btn btn-primary w-100" value="Registrarse">
                    </div>    

        </form>