<form action="/update/{{articulo.id}}" method="POST">
    <div class="form-group">
        <label for="titulo">Titulo</label>
        <input type="text" class="form-control" value="{{articulo.titulo}}" name="titulo" id="titulo" autofocus>
    </div>
    <div class="form-group">
        <label for="cuerpo">Cuerpo</label>
        <textarea name="cuerpo" class="form-control" id="cuerpo" cols="30" rows="10">{{articulo.cuerpo}}</textarea>
    </div>
    <div class="form-group">
        <label for="fecha_publicacion">Fecha de Publicacion</label>
        <input type="date" class="form-control" value="{{articulo.fecha_publicacion}}" name="fecha_publicacion" id="fecha_publicacion">
    </div>
    <div class="mt-3">
        <input type="submit" class="btn btn-primary" value="Actualizar">
    </div>    

</form>